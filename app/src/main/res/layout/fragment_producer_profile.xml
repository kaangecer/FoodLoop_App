<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/producer_profile_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/producer_profile_title"
            android:textStyle="bold"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/producer_profile_region"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/producer_profile_region" />

        <TextView
            android:id="@+id/producer_profile_assortment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/producer_profile_assortment" />

        <TextView
            android:id="@+id/producer_profile_pickup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/producer_profile_pickup" />

        <TextView
            android:id="@+id/producer_profile_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/producer_profile_about" />

    </LinearLayout>
</ScrollView>
